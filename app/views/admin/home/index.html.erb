<div>
	<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
		<h1 class="h2">CHELON</h1>
	</div>
</div>

<div class="row">
	<div class="col-12 col-md-6">
		<div class="callout callout-info shadow h-85 py-3">
			<div class="card-body">
				<div class="row no-gutters align-items-center">
					<div class="col mr-2">
						<div class="text-xs font-weight-bold text-uppercase mb-1">
							<%= link_to "Ordenes nuevas", admin_orders_path,
								class: "text-decoration-none text-dark" %>
						</div>
						<div class="h5 mb-0 font-weight-bold text-black-50">
							<%= @orders_new %>
						</div>
					</div>
					<div class="col-auto">
						<i class="fas fa-hashtag fa-lg text-muted"></i>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="col-12 col-md-6">
		<div class="callout callout-dark shadow h-85 py-3">
			<div class="card-body">
				<div class="row no-gutters align-items-center">
					<div class="col mr-2">
						<div class="text-xs font-weight-bold text-dark text-uppercase mb-1">
							Ordenes total
						</div>
						<div class="h5 mb-0 font-weight-bold text-black-50">
							<%= @orders_total %>
						</div>
					</div>
					<div class="col-auto">
						<i class="fas fa-hashtag fa-lg text-muted"></i>
					</div>
				</div>
