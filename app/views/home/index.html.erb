<section id="new"class="container mx-auto my-2 py-5">
	<h2 class="text-uppercase text-center font-weight-bolder">LO NUEVO</h2>
	<div id="image-slider" class="splide">
		<div class="splide__slider">
			<div class="splide__track">
				<ul class="splide__list">
					<% @products.first(8).each do |product| %>
						<li class="splide__slide text-center">
							<div class="splide__slide__container mb-2">
								<img class="img-fluid1" height="280" width="280"
									data-splide-lazy="<%= image_path('otra_vez_blanco.jpg') %>">
								<h5 class="text-muted"><%= product.title %></h5>
								<p>Lps. <%= product.price %></p>

								<%= form_for(@order_item, remote: true) do |f| %>
									<%= f.hidden_field :product_id,
										value: product.id %>
									<%= f.hidden_field :quantity, value: 1 %>
									<%= f.submit "Agregar",
										class: "btn btn-sm btn-outline-dark" %>
								<% end %>
							</div>
						</li>
					<% end %>
				</ul>
			</div>
		</div>
		<div class="splide__progress mt-3">
			<div class="splide__progress__bar">
			</div>
		</div>

	</div>
</section>

