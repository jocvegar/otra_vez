<% if !@order_items.nil?# && @order_items.errors.any? %>
	<ul>
		<%# @order_items.errors.full_messages.each do |msg| %>
			<li><%#= msg %></li>
		<%# end %>
	</ul>
<% end %>

<% if @order_items.size > 0 %>
	<% @order_items.each do |item| %>
		<div class="card bg-light mb-3">
			<div class="card-body">
				<div class="row">
					<div class="col-sm-8">
						<h3><%= item.product.title %></h3>
					</div>
					<div class="col-sm-4">
						<%= form_for(item, remote: true) do |f| %>
							<%= f.hidden_field :product_id,
								value: item.product.id %>
							<h5><%= item.product.price %></h5>
							<div class="from-group">
								<%= f.text_field :quantity, value: item.quantity.to_i, min: 1, class: 'form-control' %>
							</div>
							<%= f.submit "Update Quantity", class: 'btn btn-primary' %>
							<%= link_to "Delete", item, method: :delete,
								remote: true, class: 'btn btn-danger'%>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	<% end %>
<% end %>
